[Unit]
Description=Mirantis ceph historic ops dumper
After=multi-user.target

[Service]
Environment=PYTHONUNBUFFERED=1
Type=simple
User={USER}
ExecStart=/usr/bin/python2 /tmp/ceph_ho_dumper.py record --duration={DURATION} --size={SIZE} --log={LOG_FILE} {RESULT}
StandardOutput=null

[Install]
WantedBy=multi-user.target
Alias=ceph-ho-dumper
